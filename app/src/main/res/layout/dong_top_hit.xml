<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imagetophit"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_width="180dp"
        android:layout_height="120dp">
    </ImageView>
    <LinearLayout
        android:background="@color/timdam"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="AM nhac"
                android:maxWidth="200dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/trang"
                android:textSize="15sp"
                android:id="@+id/tenbaihathit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="Manh tung"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:textColor="@color/colorxam"
                android:id="@+id/tencasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
       <ImageView
           android:layout_marginRight="5dp"
           android:layout_gravity="center"
           android:layout_weight="3"
           android:src="@drawable/iconmenu"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </ImageView>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>